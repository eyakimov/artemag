{% extends 'front/index.html.twig' %}
{% block body_id 'cart_index' %}

    {% block main %}
        <h1>{{ 'title.Cart_list'|trans }}</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'Product'|trans }}</th>
                    <th>{{ 'Quantity'|trans }}</th>
                    <th>{{ 'Price'|trans }}</th>
                    <th><i class="fa fa-cogs"></i> {{ 'action'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for cart in products %}
                    <tr>
                        <td>{{ cart.product.name }}</td>
                        <td>{{ cart.quantity }}</td>

                        <td>
                            {{ cart.product.price * cart.quantity }}
                        </td>
                        <td>
                            <div class="item-actions">
                                <a href="{{ path('cart_remove', { id: cart.id }) }}" class="btn btn-sm btn-default">
                                    {{ 'action.remove'|trans }}
                                </a>

                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" align="center">
                            {% if total is defined %}
                                {{ total }}
                            {% endif %}
                            {{ 'cart.no_item_found'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    {% endblock %}

    {% block sidebar %}
        <div class="section actions">
            <a href="{{ path('front_index') }}" class="btn btn-lg btn-block btn-success">
                <i class="fa fa-plus"></i> {{ 'action.homepage'|trans }}
            </a>
        </div>

    {% endblock %}