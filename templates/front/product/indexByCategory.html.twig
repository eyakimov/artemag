{% extends 'front/index.html.twig' %}

{% block body_id 'front_product_by_category_index' %}

    {% block main %}
        <h1>{{ 'title.product_list'|trans }}</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'Name'|trans }}</th>
                    <th>{{ 'Description'|trans }}</th>
                    <th>{{ 'Price'|trans }}</th>
                    <th>{{ 'Amount'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.amount }}</td>
                        <td>
                            <div class="item-actions">
                                <a href="{{ path('front_product_show', { id: product.id }) }}" class="btn btn-sm btn-default">
                                    {{ 'action.show'|trans }}
                                </a>
                            </div>
                                <div class="item-actions">
                                <a href="{{ path('cart_add', { id: product.id }) }}" class="btn btn-sm btn-default">
                                    {{ 'action.cart_add'|trans }}
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" align="center">{{ 'product.no_product_found'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(products) }}
        </div>
    {% endblock %}

    {% block sidebar %}
        

    {% endblock %}
