{% extends 'admin/index.html.twig' %}

{% block body_id 'admin_product_show' %}

{% block main %}
    <h1>{{ 'Products'|trans }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <td>{{ product.name }}</td>
            </tr>

        </tbody>
    </table>

{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_product_edit', { id: product.id }) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit"></i> {{ 'action.edit_contents'|trans }}
        </a>
    </div>
<div class="section">
    <a href="{{ path('admin_product_index') }}" class="btn btn-lg btn-block btn-default">
        <i class="fa fa-reply"></i>{{ 'action.back_to_list'|trans }}
    </a>
</div>

{% endblock %}
