{% extends 'admin/index.html.twig' %}

{% block body_id 'admin_product_index' %}

    {% block main %}
        <h1>{{ 'title.product_list'|trans }}</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'Name'|trans }}</th>
                    <th>{{ 'Price'|trans }}</th>
                    <th>{{ 'Amount'|trans }}</th>
                    <th><i class="fa fa-cogs"></i> {{ 'action'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.amount }}</td>
                        <td>
                            <div class="item-actions">
                                <a href="{{ path('admin_product_show', { id: product.id }) }}" class="btn btn-sm btn-default">
                                    {{ 'action.show'|trans }}
                                </a>

                                <a href="{{ path('admin_product_edit', { id: product.id }) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit"></i> {{ 'action.edit'|trans }}
                                </a>

                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" align="center">{{ 'product.no_product_found'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(products) }}
        </div>
    {% endblock %}

    {% block sidebar %}
        <div class="section actions">
            <a href="{{ path('admin_product_new') }}" class="btn btn-lg btn-block btn-success">
                <i class="fa fa-plus"></i> {{ 'action.create_product'|trans }}
            </a>
        </div>

    {% endblock %}
