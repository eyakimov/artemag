{% extends 'admin/index.html.twig' %}
{% form_theme cp_form 'form/fields.html.twig' %}
{% block body_id 'change_password' %}
        
    {% block main %}
        <h1>{{ 'title.change_password'|trans }}</h1>

        {{ include('form/_form.html.twig', {
        form: cp_form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}

    {% endblock %}

    {% block sidebar %}

        <div class="section">
            <a href="{{ path('user_profile') }}" class="btn btn-lg btn-block btn-default">
                <i class="fa fa-reply"></i>{{ 'action.back_to_profile'|trans }}
            </a>
        </div>
    {% endblock %}

